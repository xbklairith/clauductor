{
	"name": "clauductor",
	"private": true,
	"type": "module",
	"pnpm": {
		"onlyBuiltDependencies": [
			"@biomejs/biome",
			"esbuild",
			"better-sqlite3"
		]
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"build": "pnpm -r build",
		"dev": "pnpm -r --parallel dev",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"check": "biome check . && pnpm -r typecheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"clean": "pnpm -r clean"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"@playwright/test": "^1.57.0",
		"typescript": "^5.6.0",
		"vitest": "^2.1.0"
	}
}
