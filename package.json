{
	"name": "clauductor",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"build": "pnpm -r build",
		"dev": "pnpm -r --parallel dev",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"format:check": "biome format .",
		"check": "biome check . && pnpm -r typecheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "pnpm -r clean"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.0",
		"typescript": "^5.6.0",
		"vitest": "^2.1.0"
	}
}
